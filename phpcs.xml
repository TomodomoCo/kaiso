<?xml version="1.0"?>
<ruleset name="Tomodomo">
  <description>Tomodomo's custom PSR-2 based Ruleset</description>

  <arg name="tab-width" value="4" />
  <arg value="-colors" />
  <arg value="p" />

  <rule ref="PSR2" />

  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="80" />
      <property name="absoluteLineLimit" value="100" />
    </properties>
  </rule>
</ruleset>
